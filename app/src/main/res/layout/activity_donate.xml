<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.groupone.pinkpalaceapp.Donate">
    <android.support.design.widget.AppBarLayout

        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            app:titleTextColor="#FFF" />
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appbar"
        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        android:width="90.5dp"
        android:height="28dp"
        android:style="@style/"
        android:text="Donation"
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_dark_background" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:width="478.5dp"
        android:height="65dp"
        android:style="@style/"
        android:text="Thank you for making this tangible gift in support of our mission.  We appreciate you!"
        android:textColor="@color/cardview_dark_background"
        tools:padding="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignEnd="@+id/imageView8"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="50dp"
        android:width="90.5dp"
        android:height="28dp"
        android:style="@style/"
        android:text="Donate"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appbar"
        android:layout_marginStart="18dp"
        android:layout_marginTop="120dp"
        android:width="90.5dp"
        android:height="28dp"
        android:style="@style/"
        android:text="Donation Information"
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_dark_background" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_alignStart="@+id/editText5"
        android:layout_marginBottom="20dp"
        android:width="90.5dp"
        android:height="28dp"
        android:style="@style/"
        android:text="OR"
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_dark_background"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_centerVertical="true"
        android:width="90.5dp"
        android:height="28dp"
        android:style="@style/"
        android:text="Donation Amount:"
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_dark_background" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="81.51sp"
        android:layout_height="40.45sp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/imageView5"
        android:width="81.51dp"
        android:height="40.45dp"
        android:style="@style/"
        android:text="$ 0.00"
        android:textSize="12sp" />

    <EditText
        android:layout_width="177.11sp"
        android:layout_height="32.48sp"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="11dp"
        android:width="177.11dp"
        android:height="32.48dp"
        android:style="@style/"
        android:text="Name on Card"
        android:textSize="12sp"
        android:id="@+id/editText1" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="177.11sp"
        android:layout_height="32.48sp"
        android:layout_above="@+id/editText5"
        android:layout_alignEnd="@+id/imageView8"
        android:layout_alignStart="@+id/editText3"
        android:width="177.11dp"
        android:height="32.48dp"
        android:style="@style/"
        android:text="Card Number"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="177.11sp"
        android:layout_height="32.48sp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="80dp"
        android:layout_toStartOf="@+id/imageView6"
        android:width="177.11dp"
        android:height="32.48dp"
        android:style="@style/"
        android:text="Expiry Date"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="177.11sp"
        android:layout_height="32.48sp"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignEnd="@+id/imageView8"
        android:layout_alignStart="@+id/editText2"
        android:width="177.11dp"
        android:height="32.48dp"
        android:style="@style/"
        android:text="CVS"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="66.3sp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="18dp"
        android:width="66.3dp"
        android:height="78dp"
        app:srcCompat="@drawable/android_pay" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="66.1sp"
        android:layout_height="41.31sp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_below="@+id/textView2"
        app:srcCompat="@mipmap/visa" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="66.1sp"
        android:layout_height="43.1sp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imageView3"
        app:srcCompat="@mipmap/mastercard" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="66.1sp"
        android:layout_height="41.31sp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_marginEnd="21dp"
        android:layout_toStartOf="@+id/imageView7"
        app:srcCompat="@mipmap/paypal" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="66.1sp"
        android:layout_height="41.31sp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView6"
        android:layout_marginEnd="38dp"
        app:srcCompat="@mipmap/amexpress" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="66.3sp"
        android:layout_height="78dp"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_alignTop="@+id/imageView3"
        app:srcCompat="@drawable/Paypallogo" />


</RelativeLayout>
