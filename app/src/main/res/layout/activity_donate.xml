<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout

        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            app:titleTextColor="#FFF" />
    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:width="90.5dp"
            android:height="28dp"
            android:text="@string/donation_LBL"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_dark_background"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="68dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:width="478.5dp"
            android:height="65dp"
            android:text="Thank you for making this tangible gift in support of our mission.  We appreciate you!"
            android:textColor="@color/cardview_dark_background"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="118dp"
            tools:padding="16dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:width="90.5dp"
            android:height="28dp"
            android:text="Donation Information"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_dark_background"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="196dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_alignStart="@+id/editText5"
            android:width="90.5dp"
            android:height="28dp"
            android:text="@string/or_separator"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="585dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView7"
            android:layout_centerVertical="true"
            android:width="90.5dp"
            android:height="28dp"
            android:text="@string/donation_amount_LBL"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_dark_background"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="314dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="81.51sp"
            android:layout_height="40.45sp"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toEndOf="@+id/imageView5"
            android:width="81.51dp"
            android:height="40.45dp"
            android:text="@string/donate_amount"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="299dp"
            tools:layout_editor_absoluteY="308dp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="177.11sp"
            android:layout_height="32.48sp"
            android:layout_alignEnd="@+id/imageView7"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/editText2"
            android:width="177.11dp"
            android:height="32.48dp"
            android:text="@string/card_name_field"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="358dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="177.11sp"
            android:layout_height="32.48sp"
            android:layout_above="@+id/editText5"
            android:layout_alignEnd="@+id/imageView8"
            android:width="177.11dp"
            android:height="32.48dp"
            android:text="@string/card_number_field"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="408dp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="177.11sp"
            android:layout_height="32.48sp"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/editText2"
            android:layout_toStartOf="@+id/imageView6"
            android:width="177.11dp"
            android:height="32.48dp"
            android:text="@string/expiry_date_field"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="465dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="177.11sp"
            android:layout_height="32.48sp"
            android:layout_alignBottom="@+id/editText3"
            android:layout_alignEnd="@+id/imageView8"
            android:layout_alignStart="@+id/editText2"
            android:width="177.11dp"
            android:height="32.48dp"
            android:text="@string/cvv_field"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="465dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="66.3sp"
            android:layout_height="78dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView2"
            android:width="66.3dp"
            android:height="78dp"
            app:srcCompat="@drawable/android_pay"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="535dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="66.1sp"
            android:layout_height="41.31sp"
            android:layout_alignStart="@+id/imageView3"
            android:layout_below="@+id/textView2"
            app:srcCompat="@mipmap/visa"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="224dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="66.1sp"
            android:layout_height="43.1sp"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView3"
            app:srcCompat="@mipmap/mastercard"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="224dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="66.1sp"
            android:layout_height="41.31sp"
            android:layout_alignTop="@+id/imageView5"
            android:layout_toStartOf="@+id/imageView7"
            app:srcCompat="@mipmap/paypal"
            tools:layout_editor_absoluteX="315dp"
            tools:layout_editor_absoluteY="224dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="66.1sp"
            android:layout_height="41.31sp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView6"
            app:srcCompat="@mipmap/amexpress"
            tools:layout_editor_absoluteX="231dp"
            tools:layout_editor_absoluteY="224dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView7"
            android:layout_alignTop="@+id/imageView3"
            app:srcCompat="@mipmap/paypal"
            tools:layout_editor_absoluteX="329dp"
            tools:layout_editor_absoluteY="588dp" />
    </android.support.constraint.ConstraintLayout>



</android.support.design.widget.CoordinatorLayout>
